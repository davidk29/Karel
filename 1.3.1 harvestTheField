void harvestTheField(){
    pickBeeper();
    repeat(3){
        turnRight();
        moveForward();
        turnLeft();
        moveForward();
        pickBeeper();
    }
    moveForward();
    turnLeft();
    moveForward();
    pickBeeper();
    repeat(3){
        moveForward();
        turnLeft();
        moveForward();
        pickBeeper();
        turnRight();
    }
    moveForward();
    turnRight();
    moveForward();
    pickBeeper();
    repeat(3){
        turnRight();
        moveForward();
        turnLeft();
        moveForward();
        pickBeeper();
    }
    moveForward();
    turnLeft();
    moveForward();
    pickBeeper();
    repeat(3){
        moveForward();
        turnLeft();
        moveForward();
        pickBeeper();
        turnRight();
    }
}
