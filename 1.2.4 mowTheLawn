void mowTheLawn(){
    repeat(2){
        repeat(6){
            moveForward();
            pickBeeper();
        }
        moveForward();
        turnLeft();
        moveForward();
        turnLeft();
        repeat(6){
            moveForward();
            pickBeeper();
        }
        moveForward();
        turnRight();
        moveForward();
        turnRight();
    }
    repeat(6){
        moveForward();
        pickBeeper();
    }
    moveForward();
    turnLeft();
    moveForward();
    turnLeft();
    repeat(6){
        moveForward();
        pickBeeper();
    }
    moveForward();
}
